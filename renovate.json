{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "dependencyDashboard": true,
  "timezone": "Europe/Chisinau",
  "rebaseWhen": "behind-base-branch",
  "labels": [
    "renovate",
    "dependencies"
  ],
  "automergeType": "pr",
  "prHeader": "## ðŸ¤– Renovate: Dependency Maintenance",
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Dockerfile$/"
      ],
      "matchStrings": [
        "ARG BW_CLI_VERSION=(?<currentValue>.*?)\\s"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "bitwarden/clients",
      "extractVersionTemplate": "^cli-v(?<version>.*)$"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "go",
        "golang",
        "docker.io/library/golang"
      ],
      "groupName": "Go"
    }
  ]
}